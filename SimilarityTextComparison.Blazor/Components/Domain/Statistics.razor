@using SimilarityTextComparison.Blazor.Models

@if (Texts != null && Texts.Count >= 2)
{
	<div id="statistics">
		<table class="table table-condensed table-bordered">
			<thead>
			<tr>
				<th scope="col" class="col-2"></th>
				<th scope="col" class="col-5">@Texts[0].FileName</th>
				<th scope="col" class="col-5">@Texts[1].FileName</th>
			</tr>
			</thead>
			<tbody>
			<tr>
				<th scope="row">Type</th>
				<td>@Texts[0].InputMode</td>
				<td>@Texts[1].InputMode</td>
			</tr>
			<tr>
				<th scope="row">Characters</th>
				<td>@Texts[0].NrOfCharacters</td>
				<td>@Texts[1].NrOfCharacters</td>
			</tr>
			<tr>
				<th scope="row">Words</th>
				<td>@Texts[0].NrOfWords</td>
				<td>@Texts[1].NrOfWords</td>
			</tr>
			<tr>
				<th scope="row">Unique matches</th>
				<td colspan="2">@UniqueMatches</td>
			</tr>
			</tbody>
		</table>
	</div>
}
else
{
	<p>Dati statistici non disponibili.</p>
}

@code {
	[Parameter]
	public List<MyInputText> Texts { get; set; }

	[Parameter]
	public int UniqueMatches { get; set; }
}